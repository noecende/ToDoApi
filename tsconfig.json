{
    "include": [
        "src/**/*",
        "src/*/*",
        "prisma/**/*"
      ],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2018",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "lib": ["es2018", "esnext.asynciterable"]
}